<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <h1 class="col-6 offset-3 text-center">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3 am">
                <lable for="username" class="form-label">Username</lable>
                <input name="username" id="username" placeholder="enter username" type="text" class="form-control" required>
            </div>
            <div class="mb-3 am">
                <lable for="password" class="form-label">Passwoed</lable>
                <input name="password" id="password" placeholder="enter password" type="password" class="form-control" required>
            </div>
            <button class="btn btn-success login">Login</button>
        </form>
        <div class="text-center mt-3">
          <h4 class="ac-text">Don't have an account?</h4>
          <form action="/signup">
              <button class="btn btn-dark signup">Sign up</button>
          </form>
      </div>
    </div>
  </div>
</body>