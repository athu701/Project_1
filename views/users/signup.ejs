<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <h1 class="col-6 offset-3 text-center ">SignUp on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3 am">
                <lable for="username" class="form-label">Username</lable>
                <input name="username" id="username" placeholder="enter username" type="text" class="form-control" required>
                <div class="valid-feedback">Looks good.</div>
            </div>
            <div class="mb-3 am">
                <lable for="email" class="form-label">Email</lable>
                <input name="email" id="email" placeholder="enter email" type="email" class="form-control" required>
            </div>
            <div class="mb-3 am">
                <lable for="password" class="form-label">Passwoed</lable>
                <input name="password" id="password" placeholder="enter password" type="password" class="form-control" required>
            </div>
            <button class="btn btn-success signup">SignUp</button>
            </form>
            <div class="text-center mt-3">
                <h4 class="ac-text">Already have an account?</h4>
                <form action="/login">
                    <button class="btn btn-dark signup">Login</button>
                </form>
            </div>
    </div>
  </div>
</body>